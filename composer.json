{
  "name" : "sqltools/where",
  "description": "PHP7.1 Fluent, immutable SQL query builder. Connectionless, framework-agnostic, no dependency.",
  "keywords": ["query builder", "sql", "mysql", "database", "select", "where", "conditions", "insert", "update", "delete", "field", "case", "when", "then", "query", "builder"],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BenTools\\Where\\": "src"
    },
    "files" : [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "files": [
      "vendor/symfony/var-dumper/Resources/functions/dump.php"
    ]
  },
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "symfony/var-dumper": "^4.0",
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^3.2",
    "php-coveralls/php-coveralls": "^2.1"
  },
  "suggest": {
    "bentools/simple-dbal": "A PDO / MySqli wrapper handling lazy loading, parallel and asynchronous queries.",
    "bentools/pager": "A simple OOP pager.",
    "bentools/etl": "PHP7.1 ETL pattern implementation"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    }
  }
}
