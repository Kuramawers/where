{
  "name" : "bentools/where",
  "description": "PHP7.1 Fluent, immutable SQL query builder.",
  "keywords": ["query builder", "sql", "mysql", "database", "select", "where", "conditions"],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BenTools\\Where\\": "src"
    },
    "files" : [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "files": [
      "vendor/symfony/var-dumper/Resources/functions/dump.php"
    ]
  },
  "require": {
    "php": "^7.1",
    "bentools/flatten-iterator": "^1.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^3.3",
    "phpunit/phpunit": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "satooshi/php-coveralls": "@stable"
  },
  "suggest": {
    "bentools/simple-dbal": "A PDO / MySqli wrapper handling lazy loading, parallel and asynchronous queries.",
    "bentools/pager": "A simple OOP pager.",
    "bentools/etl": "PHP7.1 ETL pattern implementation"
  }
}
